# 0xeeTerm — Environment Variables
# Copy this file to .env and fill in your values

# --- X.com API
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_SECRET=your_access_token_secret_here

# --- Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Solana
SOLANA_WALLET=your_public_wallet_address_here
SOLANA_RPC=https://api.mainnet-beta.solana.com

# --- 0xEE Token
TOKEN_ADDRESS=
PUMPFUN_URL=

# --- Survival config
MONTHLY_RENT=28.00
RUNWAY_DAYS=60

# --- Shill-as-a-Service
SHILL_MIN_SOL=0.005

# --- Treasury — autonomous financial management
JUPITER_API_URL=https://lite-api.jup.ag/swap/v1
SOLANA_PRIVATE_KEY=          # base58 private key — NEVER share or commit
DRY_RUN=true                 # set to false only for intentional on-chain ops
KEEP_LIQUID_SOL=0.05         # minimum SOL kept liquid at all times
BILLS=[]                     # JSON: [{"name":"VPS","address":"<pubkey>","amount_sol":0.05,"day_of_month":1}]

# --- Infrastructure (nexus)
VPS_USER=debian
VPS_IP=your_vps_ip_here
VPS_PORT=22
LOCAL_DIR=/path/to/local/0xeeAI/
REMOTE_DIR=/home/debian/0xeeAI/
LOCAL_WEB_DIR=/path/to/local/0xeeAI/web/
REMOTE_WEB_DIR=/home/debian/vhosts/ai.0xee.li/www
WEB_DIR=/path/to/local/webroot/

# --- Alerts
ALERT_EMAIL=
